{
    "$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "firelancer-admin": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "flr",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "baseHref": "/admin/",
                        "outputPath": "dist",
                        "index": "src/modules/static/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/modules/static/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "src/modules/static/",
                                "output": "/"
                            }
                        ],
                        "styles": ["src/modules/static/styles/styles.css"],
                        "stylePreprocessorOptions": {
                            "includePaths": ["./src/modules/static/styles", "./src/modules/static/fonts"]
                        },
                        "allowedCommonJsDependencies": [
                            "graphql-tag",
                            "zen-observable",
                            "lodash",
                            "dayjs",
                            "apollo-upload-client",
                            "@clr/icons",
                            "@clr/icons/shapes/all-shapes",
                            "@firelancer/common/lib/generated-types",
                            "@firelancer/common/lib/simple-deep-clone",
                            "@firelancer/common/lib/shared-constants",
                            "@firelancer/common/lib/shared-utils",
                            "@firelancer/common/lib/normalize-string",
                            "@firelancer/common/lib/unique",
                            "@firelancer/common/lib/omit",
                            "@firelancer/common/lib/pick",
                            "@messageformat/core"
                        ],
                        "vendorChunk": true,
                        "extractLicenses": false,
                        "buildOptimizer": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": {
                                "styles": {
                                    "inlineCritical": false
                                }
                            },
                            "outputHashing": "all",
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false
                        }
                    },
                    "defaultConfiguration": ""
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "buildTarget": "firelancer-admin:build"
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "firelancer-admin:build:production"
                        },
                        "plugin": {
                            "buildTarget": "firelancer-admin:build:plugin-watch"
                        },
                        "plugin-dev": {
                            "buildTarget": "firelancer-admin:build:plugin-dev-watch"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "firelancer-admin:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/modules/static/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "karmaConfig": "src/karma.conf.js",
                        "styles": ["src/modules/static/styles/styles.scss"],
                        "scripts": [],
                        "assets": ["src/modules/static/favicon.ico", "src/modules/static/assets"],
                        "stylePreprocessorOptions": {
                            "includePaths": ["./src/modules/static/styles", "./src/modules/static/fonts"]
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
                    }
                }
            }
        },
        "firelancer-admin-modules": {
            "projectType": "library",
            "root": "",
            "sourceRoot": "src",
            "prefix": "flr",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "./tsconfig.modules.json",
                        "project": "./src/modules/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "./tsconfig.modules.prod.json"
                        }
                    }
                }
            }
        }
    }
}
